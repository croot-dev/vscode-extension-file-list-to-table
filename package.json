{
  "name": "file-tree-to-markdown-table",
  "displayName": "file-tree-to-markdown-table",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "repository": {
    "url": "https://github.com/croot-dev/vscode-extension-file-tree-to-markdown-table.git",
    "type": "github"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "publish": "npx vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5"
  },
  "configuration": [
    {
      "title": "Title",
      "properties": {
        "file-tree-to-markdown-table.useJsdoc": {
          "type": "boolean",
          "default": true,
          "description": "Use JSDoc format"
        }
      }
    }
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.toTable",
        "title": "To Table"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.toTable",
          "when": "explorerResourceIsFolder",
          "group": "z_commands"
        }
      ]
    }
  },
  "dependencies": {
    "jsdoc-api": "^8.1.1",
    "jsdoc-parse": "^6.2.1"
  }
}
